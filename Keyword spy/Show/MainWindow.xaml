<Window x:Class="Show.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Show"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabPanel Grid.Row="0" Grid.Column="0" Margin="5 5 5 5">
            <Button Click="MenuChooseFile_Click" >Choose File</Button>
        </TabPanel>
        <TabPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Margin="5 5 5 5">
            <Button Click="MenuItemRefresh_Click">Refresh</Button>
            <Button Click="MenuItemClear_Click">Clear</Button>
        </TabPanel>

        <DataGrid x:Name="dgr_Info" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" AutoGenerateColumns="True"/>

    </Grid>
</Window>
